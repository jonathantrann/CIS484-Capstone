}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- Bootstrap v5.1.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="css/custom.css" rel="stylesheet" type="text/css" media="screen">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@1,300&family=Cinzel:wght@400;700&family=Nanum+Gothic&family=Playfair+Display:ital@1&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: auto;
            font-family: 'Cinzel', serif;
            letter-spacing: 3px;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        .title {
            grid-column: 1/13;
            text-align: center;
            background-color: white;
            margin: auto;
            padding: 50px;
            font-size: 50px;
        }

        a:link {
            color: #fff;
            text-decoration: none;
        }

        a:visited {
            color: #fff;
        }

        a:hover {
            color: #fff;
            text-decoration-style: double;
        }

        .padding {
            padding-top: 25px;
        }

        .btn-primary {
            background-color: #220d59;
            border: #220d59;
            width: 200px;
            font-size: 20px;
        }

            .btn-primary:hover {
                background-color: #4219a9;
            }

        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: #220d59;
            border: #220d59;
            border-radius: 5px;
            padding: 10px;
            margin: 20px;
        }


            .form-container input {
                margin: 10px;
                padding: 0px;
                width: 200px;
            }

            .form-container button {
                background-color: #220d59;
                border: #220d59;
                border-radius: 5px;
                padding: -10px 20px 0px 0px;
                margin: 10px;
                cursor: pointer;
            }
    </style>
</head>
<body>
<form method="post">
<div>
    <label for="Classes">Class Selection:</label>
        @foreach (var cls in Model.ClassList)
        {
            <div>
                <input type="checkbox" id="class-@cls.ClassID" name="ClassIDs" value="@cls.ClassID">
                <label for="class-@cls.ClassID">@cls.ClassName</label>
            </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
   </div>
   </br>
   </form>
</body>

            </html>