@model Lab3.Pages.Login.CreateFacultyModel
@{
}
<style>
    body {
        background-color: #CBC3E3;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: lightslategrey;
        border: 2px solid #450084;
        border-radius: 5px;
        padding: 20px;
        margin: 20px;
    }

        .form-container input {
            margin: 10px;
            padding: 5px;
            width: 200px;
        }

        .form-container button {
            background-color: #450084;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin: 10px;
            cursor: pointer;
        }
</style>

<h1>Faculty Sign Up</h1>

<form method="post">
    <div>
        <label for="FacultyFirst">First Name:</label>
        <input type="text" id="FacultyFirst" name="NewFaculty.FacultyFirst" />
    </div>
    <div>
        <label for="FacultyLast">Last Name:</label>
        <input type="text" id="FacultyLast" name="NewFaculty.FacultyLast" />
    </div>
    <div>
        <label for="FacultyEmailAddress">Email Address:</label>
        <input type="email" id="FacultyEmailAddress" name="NewFaculty.FacultyEmailAddress" />
    </div>
    <div>
        <label for="FacultyPhoneNumber">Phone Number:</label>
        <input type="tel" id="FacultyPhoneNumber" name="NewFaculty.FacultyPhoneNumber" />
    </div>
    <div>
        <label for="OfficeLocation">Office Location:</label>
        <input type="tel" id="OfficeLocation" name="NewFaculty.OfficeLocation" />
    </div>
    <div>
        <label for="Username">Username:</label>
        <input type="text" id="Username" name="NewFaculty.Username" />
    </div>
    <button type="button" onclick="populateFields()">Populate</button>
    <button type="button" onclick="clearFields()">Clear</button>
    <button type="submit">Submit</button>
</form>

<script>
    function populateFields() {
        document.getElementById("FacultyFirst").value = "Jane";
        document.getElementById("FacultyLast").value = "Doe";
        document.getElementById("FacultyEmailAddress").value = "janedoe@example.com";
        document.getElementById("FacultyPhoneNumber").value = "123-456-7890";
        document.getElementById("OfficeLocation").value = "Showker 5015";
        document.getElementById("Username").value = "janedoe";
    }
    
    function clearFields() {
        document.getElementById("FacultyFirst").value = "";
        document.getElementById("FacultyLast").value = "";
        document.getElementById("FacultyEmailAddress").value = "";
        document.getElementById("FacultyPhoneNumber").value = "";
        document.getElementById("OfficeLocation").value = "";
        document.getElementById("Username").value = "";
    }
</script>