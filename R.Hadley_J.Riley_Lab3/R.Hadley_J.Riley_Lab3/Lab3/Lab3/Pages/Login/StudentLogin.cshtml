    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Cinzel', serif;
            letter-spacing: 3px;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        .containerpage {
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            grid-auto-rows: minmax(100px, auto);
            background-image: url(images/cob-building.png);
            background-size: cover;
            height: 100vh;
        }

        .title {
            grid-column: 1/13;
            text-align: center;
            background-color: white;
            margin: 100px 150px 0px 150px;
            /*padding: 50px;*/
            font-size: 50px;
        }

        .textentry {
            grid-column: 1/13;
            text-align: center;
            background-color: white;
            margin: -50px 150px 0px 150px;
            /*padding: -50px;*/
            align-items: center;
        }

        /*.textentry2 {
                    grid-column: 1/13;
                    text-align: center;
