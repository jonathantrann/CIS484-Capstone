        /*}*/
        .submit {
            grid-column: 1/13;
            background-color: white;
            margin: 0px 150px 0px -150px;
            text-align: left;
            /*padding: 10px 0px 0px 0px;*/
            /*align-items: left;*/
        }

        .btn-primary {
            background-color: #220d59;
            border: #220d59;
            margin: 0px 150px 0px 150px;
            width: 400px;
            font-size: 20px;
        }

            .btn-primary:hover {
                background-color: #4219a9;
            }

        .create {
            grid-column: 1/13;
            background-color: white;
            margin: 0px 150px 0px -150px;
            text-align: left;
            /*padding: 0px 0px 0px 0px;*/
        }

        a:link {
            color: #fff;
            text-decoration: none;
        }

        a:visited {
            color: #fff;
        }

        a:hover {
            color: #fff;
            text-decoration-style: double;
        }

    </style>
</head>
<body>
    <div class="containerpage">
        <div class="title">
            Student Login
        </div>

        <div class="textentry">
            <form asp-page="StudentLogin">

                <input asp-for="Username" class="form-control" placeholder="Username" />
                <br />
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <br />
                <div class="submit">
                    <input type="submit" class="btn btn-primary" />
                </div>
            </form>
