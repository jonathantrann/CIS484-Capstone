@page
@model IndexModel
<!DOCTYPE html>
<html lang="en">
    <head> 
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <!-- Bootstrap v5.1.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="css/custom.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@1,300&family=Cinzel:wght@400;700&family=Nanum+Gothic&family=Playfair+Display:ital@1&display=swap" rel="stylesheet" />
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Cinzel', serif;
            letter-spacing: 3px;
        }

        img {
            max-width: 100%;
            height: auto;
        }



        .containerpage {
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            grid-auto-rows: minmax(150px, auto);
            background-image: url(images/hartman-hall.jpg);
            background-size: cover;
            height: 100vh;
        }



        .title {
            color: #CBB677;
            -webkit-text-stroke: 2px #450084;
            grid-column: 1/13;
            text-align: center;
            background-color: transparent;
            margin: 100px 150px 0px 150px;
            padding: 50px 0px 10px 0px;
            font-size: 70px;
        }





        .logo {
            grid-column: 1/13;
            text-align: center;
            background-color: transparent;
            margin: 0px 150px 0px 150px;
            padding: 10px 0px 150px 0px;
        }

        .student {
            grid-column: 1/7;
            background-color: transparent;
            margin: 0px 0px 100px 150px;
            text-align: right;
            padding: 50px;
            color: #CBB677;
        }

        .btn-primary {
            background-color: #220d59;
            border: #220d59;
            width: 300px;
            font-size: 30px;
        }

            .btn-primary:hover {
                background-color: #4219a9;
            }



        .faculty {
            grid-column: 7/13;
            background-color: transparent;
            margin: 0px 150px 100px 0px;
            text-align: left;
            padding: 50px;
            font-size: 30px;
            color: #CBB677;
        }



        a:link {
            color: #fff;
            text-decoration: none;
        }



        a:visited {
            color: #fff;
        }



        a:hover {
            color: #fff;
            text-decoration-style: double;
        }
    </style>

</head>



<body>

    <div class="containerpage">

        <div class="title">

            <strong>Office - X</strong>

        </div>

        <div class="logo">

            <img src="images/jmu-logo-transparent.png" alt="JMU logo" width="225">

        </div>

        <div class="student">

            <a href="/Login/StudentLogin"><button type="button" class="btn btn-primary btn-lg">Student Login</button></a>

        </div>

        <div class="faculty">

            <a href="/Login/FacultyLogin"><button type="button" class="btn btn-primary btn-lg">Faculty Login</button></a>

        </div>

    </div>

</body>

</html>
