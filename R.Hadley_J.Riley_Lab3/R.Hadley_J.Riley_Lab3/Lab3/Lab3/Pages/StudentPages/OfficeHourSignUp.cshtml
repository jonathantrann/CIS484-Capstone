        .dropdown {
            grid-column: 2/12;
            text-align: center;
        }

        .confirm {
            grid-column: 4/6;
        }

        .faculty {
            grid-column: 1/3;
            text-align: left;
        }

        .day {
            grid-column: 3/5;
            text-align: left;
        }

        .start {
            grid-column: 5/7;
