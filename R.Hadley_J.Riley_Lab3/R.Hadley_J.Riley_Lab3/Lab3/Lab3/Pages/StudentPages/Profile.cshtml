<br />



@{
    var username = HttpContext.Session.GetString("Username");
}
@foreach (var student in Model.UserList)
{
    <div class="form-floating mb-4">
        <input type="text" class="form-control" id="floatingFirstName" placeholder="FirstName" value="@student.StudentFirst" />
        <label for="floatingFirstName">First Name</label>
    </div>
    <div class="form-floating mb-4">
        <input type="text" class="form-control" id="floatingLastName" placeholder="LastName" value="@student.StudentLast" />
        <label for="floatingLastName">Last Name</label>
    </div>
    <div class="form-floating mb-4">
        <input type="text" class="form-control" id="floatingEmailAddress" placeholder="EmailAddress" value="@student.StudentEmailAddress" />
        <label for="floatingEmailAddress">Email Address</label>
    </div>
    <div class="form-floating mb-4">
        <input type="text" class="form-control" id="floatingPhoneNumber" placeholder="PhoneNumber" value="@student.StudentPhoneNumber" />
        <label for="floatingPhoneNumber">Phone Number</label>
    </div>
}